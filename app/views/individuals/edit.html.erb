<h1>Edit <%= @individual.first_name %> <%= @individual.last_name %></h1>

<%= form_for [@meeting, @individual], url: {action: "update" } do |f| %>
  <%= f.label :first_name, "First Name" %>
  <%= f.text_field :first_name %>
  <br />
  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name %>
  <br />
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br />
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br />
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br />
  <%= f.label :birthday %>
  <%= select_date @individual.birthday, start_year: Date.today.year - 120, end_year: Date.today.year, order: [:day, :month, :year], prefix: :birthday %>
  <br />
  <%= f.label :notes %>
  <%= f.text_field :notes %>
  <br />
  <%= f.submit "Update" %>

<% end %>
