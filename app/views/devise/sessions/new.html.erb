<div class="row">
  <div class="small-8 small-centered medium-6 columns display-container">

    <h2>Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button round" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
